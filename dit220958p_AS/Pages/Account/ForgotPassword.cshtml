@page
@model dit220958p_AS.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center fw-bold mb-3" style="color: #173F35;">Forgot Password</h2>
        <p class="text-center" style="color: #173F35;">
            Enter your email to receive an OTP for password reset.
        </p>

        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <!-- Email Input -->
            <div class="mb-3">
                <label class="form-label fw-bold" style="color: #173F35;">* Email</label>
                <input asp-for="Email" type="email" class="form-control rounded-3" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Request OTP Button -->
            <button type="submit" class="btn btn-dark w-100 rounded-pill py-2" style="background-color: #173F35; border: none;">
                Request OTP
            </button>

            <!-- Error & Success Messages -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="text-danger text-center mt-2">@Model.ErrorMessage</div>
            }
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="text-success text-center mt-2">@Model.SuccessMessage</div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
