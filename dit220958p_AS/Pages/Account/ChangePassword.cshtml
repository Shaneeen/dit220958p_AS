@page
@model dit220958p_AS.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center fw-bold mb-3" style="color: #173F35;">Change Password</h2>

        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <!-- Current Password -->
            <div class="mb-3">
                <label class="form-label fw-bold" style="color: #173F35;">* Current Password</label>
                <input asp-for="Input.CurrentPassword" type="password" class="form-control rounded-3" required />
                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label class="form-label fw-bold" style="color: #173F35;">* New Password</label>
                <input asp-for="Input.NewPassword" type="password" class="form-control rounded-3" required />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm New Password -->
            <div class="mb-3">
                <label class="form-label fw-bold" style="color: #173F35;">* Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-3" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Change Password Button -->
            <button type="submit" class="btn btn-dark w-100 rounded-pill py-2" style="background-color: #173F35; border: none;">
                Change Password
            </button>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="text-danger text-center mt-2">@Model.ErrorMessage</div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
